[user]
	name = Patrick Barletta
	email = teamdest@pbarletta.com

[core]
	editor = nvim
	pager = delta
	excludesfile = /Users/pbarletta/.gitignore_global

[commit]
	template = /Users/pbarletta/.stCommitMsg

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[init]
	defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[include]
	path = ~/.config/delta/themes.gitconfig 

[delta]
  features = catppuccin-mocha decorations
	navigate = true

[merge]
  tool = vimdiff
	conflictstyle = zdiff3

[diff]
  too = vimdiff
	colorMoved = default

[credential]
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
[credential "https://git.blazenet.org"]
  provider = generic

[mergetool "vimdiff"]
  cmd = nvimd -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
